<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/action_bar_size"
                android:background="@android:color/transparent">

                <RelativeLayout
                    android:id="@+id/back"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripple">

                    <ImageView
                        android:tint="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="14dp"
                        android:src="@drawable/ic_back" />
                </RelativeLayout>

                <TextView

                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:text="缴费"
                    android:textColor="@color/black"
                    android:textSize="@dimen/actionBarTitleSize" />

                <TextView
                    android:id="@+id/rightSubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:gravity="center"
                    android:onClick="rightSubTitleClicked"
                    android:text="管理"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/actionBarSubTitleSize"
                    android:visibility="invisible" />

            </RelativeLayout>

        </RelativeLayout>
        <com.xw.repo.supl.SlidingUpPanelLayout
            android:id="@+id/sliding_up_panel_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.xw.repo.supl.SlidingUpPanelLayout>
    </RelativeLayout>


</layout>